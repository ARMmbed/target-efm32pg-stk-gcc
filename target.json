{
  "name": "efm32pg-stk-gcc",
  "version": "0.2.0",
  "description": "GCC target description for the SLSTK3401A Starter Kit for EFM32PG1.",
  "license": "Apache-2.0",
  "inherits": {
    "efm32pg-gcc": "^1.0.0"
  },
  "keywords": [
    "mbed-target:efm32pg-stk",
    "mbed-official",
    "efm32pg-stk"
  ],
  "similarTo": [
    "efm32pg-stk"
  ],
  "config": {
    "hardware": {
      "device": "EFM32PG1B200F256GM48",
      "flash-size": 256,
      "ram-size": 32,
      "clock": {
        "core": {
          "source": "HFXO",
          "frequency": 40000000
        },
        "low-energy": {
          "source": "LFXO",
          "frequency": 32768
        }
      },
      "pins": {
        "LED0": "PF4",
        "LED1": "PF5",
        "LED2": "LED0",
        "LED3": "LED0",
        "LED4": "LED1",
        "SW0": "PF6",
        "SW1": "PF7",
        "BTN0": "SW0",
        "BTN1": "SW1",
        "I2C_SDA": "PC10",
        "I2C_SCL": "PC11",
        "SPI_MOSI": "PC6",
        "SPI_MISO": "PC7",
        "SPI_CLK": "PC8",
        "SPI_CS": "PC9",
        "UART_TX": "PD10",
        "UART_RX": "PD11",
        "SERIAL_TX": "PD10",
        "SERIAL_RX": "PD11",
        "STDIO_UART_TX": "PA0",
        "STDIO_UART_RX": "PA1",
        "USBTX": "PA0",
        "USBRX": "PA1",
        "EFM_BC_EN": "PA5"
      }
    },
    "modules": {
      "serial": {
        "stdio-uart": "USART0"
      }
    }
  },
  "scripts": {
    "debug": [
      "arm-none-eabi-gdb",
      "$program",
      "--eval",
      "target remote localhost:2331",
      "-ex",
      "mon device EFM32PG1B200F256GM48",
      "-ex",
      "mon flash download 1",
      "-ex",
      "mon SWO Start 0 875000Hz"
    ],
    "test": [
      "mbed_test_wrapper",
      "--target",
      "EFM32PG_STK3401",
      "$program"
    ]
  }
}
